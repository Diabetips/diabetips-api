mixin button(link, text)
    table(style="border-collapse:collapse;background-color:#2da4db;border-radius:4px;height:50px;width:310px!important" width="100%" height="100%" cellspacing="0" cellpadding="0" border="0")
        tbody
            tr(style="page-break-before:always")
                td(style="font-family:sans-serif;font-weight:normal;text-align:center;margin:0;color:#fff;font-size:20px;line-height:100%" valign="middle" align="center")
                    a(href=link style="font-family:sans-serif;color:#fff;display:block;padding:15px;text-decoration:none;width:280px;font-size:18px;line-height:26px" target="_blank") #{text}
