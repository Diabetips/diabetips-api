{
    "db": {
        "entities": [
            "%{__dirname}/entities/**/*.{js,ts}"
        ]
    },
    "http": {
        "host": "::",
        "port": 8080
    },
    "logger": {
        "appenders": {
            "console": {
                "type": "console"
            },
            "file": {
                "type": "file",
                "filename": "logs/@{pkg.name}.log",
                "maxLogSize": 10485760,
                "backups": 10,
                "compress": true,
                "keepFileExt": true
            }
        },
        "categories": {
            "default": {
                "appenders": ["console", "file"],
                "level": "all"
            },
            "http": {
                "appenders": ["console", "file"],
                "level": "all"
            },
            "sql": {
                "appenders": ["console", "file"],
                "level": "all"
            }
        }
    },
    "mailDefaults": {
        "from": {
            "name": "Diabetips",
            "address": "account@diabetips.fr"
        },
        "replyTo": "noreply@diabetips.fr"
    }
}
