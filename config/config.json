{
    "db": {
        "entities": [
            "%{__dirname}/entities/**/*.{js,ts}"
        ]
    },
    "diabetips": {
        "accountUrl": "https://account.diabetips.fr"
    },
    "http": {
        "host": "::",
        "port": 8080
    },
    "logger": {
        "appenders": {
            "console": {
                "type": "console",
                "layout": "@{logger.layout}"
            },
            "file": {
                "type": "file",
                "filename": "logs/@{pkg.name}.log",
                "layout": "@{logger.layout}",
                "maxLogSize": 10485760,
                "backups": 10,
                "compress": true,
                "keepFileExt": true
            }
        },
        "categories": {
            "default": {
                "appenders": ["console", "file"],
                "level": "all",
                "enableCallStack": true
            },
            "http": {
                "appenders": ["console", "file"],
                "level": "all"
            },
            "sql": {
                "appenders": ["console", "file"],
                "level": "all"
            }
        },
        "layout": {
            "type": "pattern",
            "pattern": "%[[%d] [%p] %c -%] %m [%f{1}:%l]"
        }
    },
    "mail": {
        "logger": true
    },
    "mailDefaults": {
        "from": {
            "name": "Diabetips",
            "address": "account@diabetips.fr"
        },
        "replyTo": "noreply@diabetips.fr"
    }
}
